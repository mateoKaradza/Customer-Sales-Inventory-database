extends layout.jade

block title
  title= title

block body
  h1 Edit Product
  form(name="editProduct", action="/Products/Edit", method="post")
    .form-group
      input(type="hidden", value=product[0].product_id class="form-control", name="product_id")
    .form-group
      label(for="name") Product Name
      input(type="text", value=product[0].name class="form-control", name="name")
    .form-group
      label(for="name") Default Product Price
      input(type="number" step="any", value=product[0].default_price class="form-control", name="price")
    .form-group
      label(for="name") Products on stock
      input(type="number" step="1", value=product[0].quantity class="form-control", name="quantity")
    .form-group
      label(for="name") First Stone Earning
      input(type="number", step="0.001" value=product[0].first_stone_earning class="form-control", name="first_stone_earning", id="first_stone_earning")
      label(for="name") Second Stone Earning
      input(type="number", step="0.001" value=product[0].second_stone_earning class="form-control", name="second_stone_earning", id="second_stone_earning")
      label(for="name") Third Stone Earning
      input(type="number", step="0.001" value=product[0].third_stone_earning class="form-control", name="third_stone_earning", id="third_stone_earning")
      label(for="name") Inventory Cost
      input(type="number", step="0.001" value=product[0].inventory_cost class="form-control", name="inventory_cost", id="inventory_cost")
      label(for="deleted") Status? (Deleted - 1, Active - 0)
        input(type="text" value=product[0].status class="form-control" name="status")
    button(type="submit", class="btn btn-success") Submit Changes