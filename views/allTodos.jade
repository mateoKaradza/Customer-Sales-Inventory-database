extends layout.jade

block title
   title= title

block body
    h1 Current Todo List
    a(href="/Todo/New", class="btn btn-primary") Add new Todo
    br
    br
    table.table-hover.table.table-striped
     thead
      tr
       th Tasks
       th Actions
     tbody
      each val in todos
       tr
        td
         a(href='/Todo/View/' + val.todo_id)=val.message
        td
         a(href='/Todo/View/' + val.todo_id, class="btn btn-default btn-xs") View
         | &nbsp &nbsp
         a(href='/Todo/Edit/' + val.todo_id, class="btn btn-default btn-xs") Edit
         | &nbsp &nbsp
         a(href='/Todo/Delete/' + val.todo_id, class="btn btn-default btn-xs") Delete