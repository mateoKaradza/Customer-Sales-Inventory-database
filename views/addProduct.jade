extends layout.jade

block title
  title= title

block body
  h1 Add new Product
  form(name="addProduct", action="/Products/New", method="post")
    .form-group
      label(for="name") Product Name
      input(type="text", class="form-control", name="name")
    .form-group
      label(for="name") Default Product Price
      input(type="number" step="any", class="form-control", name="default_price")
    .form-group
      label(for="name") Products on stock
      input(type="number" step="1", class="form-control", name="quantity")
      label(for="name") First Stone Earning
      input(type="number", step="0.001" value=0 class="form-control", name="first_stone_earning", id="first_stone_earning")
      label(for="name") Second Stone Earning
      input(type="number", step="0.001" value=0 class="form-control", name="second_stone_earning", id="second_stone_earning")
      label(for="name") Third Stone Earning
      input(type="number", step="0.001" value=0 class="form-control", name="third_stone_earning", id="third_stone_earning")
      label(for="name") Inventory Cost
      input(type="number", step="0.001" value=0 class="form-control", name="inventory_cost", id="inventory_cost")
    button(type="submit", class="btn btn-success") Submit Changes